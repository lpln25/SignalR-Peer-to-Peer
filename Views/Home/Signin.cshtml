@model WebAppSaba.Models.ViewModel.UserSigninVM
@{
    ViewData["Title"] = "عضویت";
}


<div class="row">
    <div class="col-md-4">
        <h1>ثبت نام</h1>
        <form asp-action="Signin" asp-controller="Home">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Nickname" class="form-control" id="Nickname" placeholder="@Html.DisplayNameFor(d => d.Nickname)" />
                <label asp-for="Nickname" class="control-label">@Html.DisplayNameFor(d => d.Nickname)</label>
                <span asp-validation-for="Nickname" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Username" class="form-control" id="Username" placeholder="@Html.DisplayNameFor(d => d.Username)" />
                <label asp-for="Username" class="control-label">@Html.DisplayNameFor(d => d.Username)</label>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="password" asp-for="Password" class="form-control" id="Password" placeholder="@Html.DisplayNameFor(d => d.Password)" />
                <label asp-for="Password" class="control-label">@Html.DisplayNameFor(d => d.Password)</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ثبت نام" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="col-md-8"> <h4>ورود با نام کاربری</h4> <a asp-action="Login">برای ورود اینجا کلیک نماید</a> </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
