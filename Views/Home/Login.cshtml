@model WebAppSaba.Models.ViewModel.UserLoginVM
@{
    ViewData["Title"] = "ورود";
}



<div class="row">
    <div class="col-md-4">
        <h1>ورود به چت</h1>
        <form asp-action="Login" asp-controller="Home">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Username" class="form-control" id="Username" placeholder="@Html.DisplayNameFor(d => d.Username)" />
                <label asp-for="Username" class="control-label">@Html.DisplayNameFor(d => d.Username)</label>
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input type="password" asp-for="Password" class="form-control" id="Password" placeholder="@Html.DisplayNameFor(d => d.Password)" />
                <label asp-for="Password" class="control-label">@Html.DisplayNameFor(d => d.Password)</label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ورود به سیستم" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="col-md-8"> <h4>عضویت جدید</h4> <a asp-action="Signin">برای عضویت اینجا کلیک نماید</a> </div>
    
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
